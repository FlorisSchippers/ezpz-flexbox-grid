{
  "name": "ezpz-grid",
  "version": "1.1.1",
  "description": "A lightweight Sass (.scss) flexbox grid system that's easy to setup and offers a lot of customisation.",
  "main": "src/_ezpz-flexbox-grid.scss",
  "dependencies": {
    "cssnano": "^3.7.1",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2"
  },
  "devDependencies": {
    "cssnano": "^3.7.1",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.2"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "sass": "node-sass --indent-type tab --source-map true --source-map-contents sass src/_ezpz-flexbox-grid.scss > dist/ezpz-flexbox-grid.css",
    "postcss": "postcss --no-map.inline -u cssnano src/*.css dist/*.css --safe",
    "start": "npm-run-all sass"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vicompany/ezpz-flexbox-grid.git"
  },
  "keywords": [
    "ezpz",
    "flexbox",
    "grid",
    "vi-company",
    "sass"
  ],
  "author": "Sven Sigmond - VI Company",
  "contributors": [
    "Edwin Kalkman (https://github.com/edw1n)",
    "Sjors Spoorendonk (https://github.com/sjorsjes)"
  ],
  "license": "MIT",
  "bugs": "https://github.com/vicompany/ezpz-flexbox-grid/issues",
  "homepage": "https://github.com/vicompany/ezpz-flexbox-grid#readme"
}
